<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycarad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.activity.LoginActivity"
            android:label="@string/app_name">
            <!-- dkkdp -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.HomeActivity"
            android:label="MyCarAD" />
        <activity
            android:name=".view.activity.SignupActivity"
            android:label="회원가입"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activity.DriverViewActivity"
            android:label="광고할래요" />
        <activity
            android:name=".view.activity.AdvisorViewActivity"
            android:label="광고해주세요" />
        <activity
            android:name=".view.activity.AdvisorWriteActivity"
            android:label="글쓰기" />
        <activity
            android:name=".view.activity.DriverWriteActivity"
            android:label="글쓰기" />
        <activity
            android:name=".view.activity.MyActivity"
            android:label="마이 페이지" />
        <activity
            android:name=".view.activity.MyInfoChangeActivity"
            android:label="내 정보" />
        <activity
            android:name=".view.activity.MyAppInfoActivity"
            android:label="앱정보" />
        <activity
            android:name=".view.activity.MyWriteViewActivity"
            android:label="내가 쓴 글보기" />
    </application>

</manifest>