<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/advisorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="광고해주세요"
        android:textColor="@color/baseTextColor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/homeAdvisorRecyclerView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeAdvisorRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/advisorTextView"
        tools:itemCount="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/home_recycleview_item" />

    <TextView
        android:id="@+id/driverTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="광고할래요"
        android:textColor="@color/baseTextColor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeAdvisorRecyclerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeDriverRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/driverTextView"
        tools:itemCount="4"
        tools:listitem="@layout/home_recycleview_item" />

</androidx.constraintlayout.widget.ConstraintLayout>