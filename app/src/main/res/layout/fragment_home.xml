<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/advisorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:text="광고해주세요"
        app:layout_constraintEnd_toStartOf="@+id/advisorNavi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/baseTextColor"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/advisorNavi"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="더보기"
        app:layout_constraintBottom_toBottomOf="@+id/advisorTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/advisorTextView"
        app:layout_constraintTop_toTopOf="@+id/advisorTextView"
        android:background="@drawable/my_button"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/advisorRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/advisorTextView"
        tools:itemCount="4"
        tools:listitem="@layout/home_recycleview_item" />

    <TextView
        android:id="@+id/driverTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:text="광고할래요"
        app:layout_constraintEnd_toStartOf="@+id/driverNavi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advisorRecyclerView"
        android:textColor="@color/baseTextColor"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/driverNavi"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="더보기"
        app:layout_constraintBottom_toBottomOf="@+id/driverTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/driverTextView"
        app:layout_constraintTop_toTopOf="@+id/driverTextView"
        android:background="@drawable/my_button"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/driverRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/driverTextView"
        tools:itemCount="4"
        tools:listitem="@layout/home_recycleview_item" />

</androidx.constraintlayout.widget.ConstraintLayout>