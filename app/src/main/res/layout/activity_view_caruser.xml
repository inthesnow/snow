<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/viewCaruserTitleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="제목을 입력해주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/viewCaruserline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/viewCaruserTitleEdit"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/viewCaruserCarKindTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="차종"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCaruserline"
        app:layout_goneMarginTop="20dp" />

    <TextView
        android:id="@+id/viewCaruserCarKindEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/viewCaruserCarKindTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewCaruserCarKindTextView"
        app:layout_constraintTop_toTopOf="@+id/viewCaruserCarKindTextView"
        tools:ignore="MissingConstraints"
        tools:text="고정값" />

    <TextView
        android:id="@+id/viewCaruserCarNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="차종"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCaruserCarKindTextView"
        app:layout_goneMarginTop="20dp" />

    <TextView
        android:id="@+id/viewCaruserCarNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/viewCaruserCarNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewCaruserCarNameTextView"
        app:layout_constraintTop_toTopOf="@+id/viewCaruserCarNameTextView"
        tools:ignore="MissingConstraints"
        tools:text="고정값" />

    <TextView
        android:id="@+id/viewCaruserTuningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="튜닝여부"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCaruserCarNameTextView"
        app:layout_goneMarginTop="20dp"></TextView>

    <CheckBox
        android:id="@+id/viewCaruserTuningCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/viewCaruserTuningTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewCaruserTuningTextView"
        app:layout_constraintTop_toTopOf="@+id/viewCaruserTuningTextView"></CheckBox>

    <EditText
        android:id="@+id/viewCaruserTuningEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/view_edit_background"
        android:gravity="start"
        android:hint="튜닝 세부사항을 적어주세요"
        android:minLines="3"
        app:layout_constraintEnd_toEndOf="@+id/viewCaruserTuningCheck"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/viewCaruserTuningTextView"
        app:layout_constraintTop_toBottomOf="@+id/viewCaruserTuningTextView"
        app:layout_goneMarginTop="20dp" />

    <TextView
        android:id="@+id/viewCaruserviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="세부 사항"
        app:layout_constraintEnd_toEndOf="@+id/viewCaruserTuningTextView"
        app:layout_constraintStart_toStartOf="@+id/viewCaruserTuningTextView"
        app:layout_constraintTop_toBottomOf="@+id/viewCaruserTuningEdit" />

    <EditText
        android:id="@+id/viewCaruserviewEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/view_edit_background"
        android:gravity="start"
        android:hint="글 내용을 적어주세요."
        android:minLines="5"
        app:layout_constraintEnd_toEndOf="@+id/viewCaruserTuningEdit"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/viewCaruserTuningEdit"
        app:layout_constraintTop_toBottomOf="@+id/viewCaruserviewTextView"
        app:layout_goneMarginTop="20dp" />
    

</androidx.constraintlayout.widget.ConstraintLayout>