<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/includeAppBar"
            layout="@layout/widget_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/includeAppBar"
            app:layout_constraintVertical_bias="0">

            <EditText
                android:id="@+id/writeAdvTitleEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:hint="제목을 입력해주세요."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/writeAdvline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvTitleEdit"
                android:background="@color/black" />

            <TextView
                android:id="@+id/writeAdvNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="업체명"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvline" />

            <TextView
                android:id="@+id/writeAdvNameEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="@id/writeAdvNameTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/writeAdvNameTextView"
                app:layout_constraintTop_toTopOf="@+id/writeAdvNameTextView"
                tools:text="고정값" />

            <TextView
                android:id="@+id/writeAdvCarKindTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="차종"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvNameTextView" />

            <CheckBox
                android:id="@+id/writeAdvCarKindCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="소형"
                app:layout_constraintBottom_toBottomOf="@+id/writeAdvCarKindTextView"
                app:layout_constraintEnd_toStartOf="@+id/writeAdvCarKindCheck2"
                app:layout_constraintStart_toEndOf="@id/writeAdvCarKindTextView"
                app:layout_constraintTop_toTopOf="@+id/writeAdvCarKindTextView" />

            <CheckBox
                android:id="@+id/writeAdvCarKindCheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="중형"
                app:layout_constraintBottom_toBottomOf="@+id/writeAdvCarKindTextView"
                app:layout_constraintEnd_toStartOf="@+id/writeAdvCarKindCheck3"
                app:layout_constraintStart_toEndOf="@id/writeAdvCarKindCheck"
                app:layout_constraintTop_toTopOf="@+id/writeAdvCarKindTextView" />

            <CheckBox
                android:id="@+id/writeAdvCarKindCheck3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="대형"
                app:layout_constraintBottom_toBottomOf="@+id/writeAdvCarKindTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/writeAdvCarKindCheck2"
                app:layout_constraintTop_toTopOf="@+id/writeAdvCarKindTextView" />

            <TextView
                android:id="@+id/writeAdvAraeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="선호 지역"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvCarKindTextView" />

            <EditText
                android:id="@+id/writeAdvAraeEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:hint="선호 부위"
                app:layout_constraintBottom_toBottomOf="@+id/writeAdvAraeTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/writeAdvNameEdit"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvCarKindTextView"
                app:layout_constraintTop_toTopOf="@+id/writeAdvAraeTextView" />

            <TextView
                android:id="@+id/writeAdvMoneyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="금액"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/writeAdvConectEdit"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvAraeTextView"/>

            <EditText
                android:id="@+id/writeAdvMoneyEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:hint="예상 금액을 적어주세요."
                app:layout_constraintBottom_toBottomOf="@+id/writeAdvMoneyTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/writeAdvNameEdit"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvAraeTextView"
                app:layout_constraintTop_toTopOf="@+id/writeAdvMoneyTextView" />

            <TextView
                android:id="@+id/writeAdvConectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="연락처"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/writeAdvConectEdit"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvMoneyTextView" />

            <EditText
                android:id="@+id/writeAdvConectEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:hint="연락수단을 남겨주세요."
                app:layout_constraintBottom_toBottomOf="@+id/writeAdvConectTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/writeAdvNameEdit"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvMoneyTextView"
                app:layout_constraintTop_toTopOf="@+id/writeAdvConectTextView" />

            <TextView
                android:id="@+id/writeAdvWriteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="세부 사항"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvConectTextView" />

            <EditText
                android:id="@+id/writeAdvWriteEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/write_edit_background"
                android:gravity="start"
                android:hint="글 내용을 적어주세요."
                android:minLines="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/writeAdvWriteTextView" />

            <Button
                android:id="@+id/writeAdvClearButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/write_clear_btn_background"
                android:enabled="false"
                android:text="글 게시"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintTop_toBottomOf="@id/writeAdvWriteEdit" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>