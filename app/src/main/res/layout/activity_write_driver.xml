<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/writeDriverTitleEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:hint="제목을 입력해주세요."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/writeDriverline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/writeDriverTitleEdit"
            tools:background="@color/black" />

        <TextView
            android:id="@+id/writeDriverCarKindTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="차종"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/writeDriverline"
            app:layout_goneMarginTop="20dp" />

        <TextView
            android:id="@+id/writeDriverCarKindEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/writeDriverCarKindTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/writeDriverCarKindTextView"
            app:layout_constraintTop_toTopOf="@+id/writeDriverCarKindTextView"
            tools:text="고정값" />

        <TextView
            android:id="@+id/writeDriverCarNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="차명"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/writeDriverCarKindTextView"
            app:layout_goneMarginTop="20dp" />

        <TextView
            android:id="@+id/writeDriverCarNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/writeDriverCarNameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/writeDriverCarNameTextView"
            app:layout_constraintTop_toTopOf="@+id/writeDriverCarNameTextView"
            tools:text="고정값" />

        <TextView
            android:id="@+id/writeDriverTuningTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="튜닝여부"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/writeDriverCarNameTextView"
            app:layout_goneMarginTop="20dp" />

        <CheckBox
            android:id="@+id/writeDriverTuningCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/writeDriverTuningTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/writeDriverTuningTextView"
            app:layout_constraintTop_toTopOf="@+id/writeDriverTuningTextView" />

        <EditText
            android:visibility="gone"
            android:id="@+id/writeDriverTuningEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/write_edit_background"
            android:gravity="start"
            android:hint="튜닝 세부사항을 적어주세요"
            android:minLines="3"
            app:layout_constraintEnd_toEndOf="@+id/writeDriverTuningCheck"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/writeDriverTuningTextView"
            app:layout_constraintTop_toBottomOf="@+id/writeDriverTuningTextView"
            app:layout_goneMarginTop="20dp" />

        <TextView
            android:id="@+id/writeDriverWriteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="세부 사항"
            app:layout_constraintEnd_toEndOf="@+id/writeDriverTuningTextView"
            app:layout_constraintStart_toStartOf="@+id/writeDriverTuningTextView"
            app:layout_constraintTop_toBottomOf="@+id/writeDriverTuningEdit" />

        <EditText
            android:id="@+id/writeDriverWriteEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/write_edit_background"
            android:gravity="start"
            android:hint="글 내용을 적어주세요."
            android:minLines="5"
            app:layout_constraintEnd_toEndOf="@+id/writeDriverTuningEdit"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/writeDriverTuningEdit"
            app:layout_constraintTop_toBottomOf="@+id/writeDriverWriteTextView"
            app:layout_goneMarginTop="20dp" />

        <Button
            android:id="@+id/writeDriverClearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/login_button_backrground"
            android:enabled="false"
            android:text="글 게시"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/writeDriverWriteEdit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>