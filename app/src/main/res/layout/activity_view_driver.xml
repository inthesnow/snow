<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/includeAppBar"
            layout="@layout/widget_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/includeAppBar"
            app:layout_constraintVertical_bias="0">

            <TextView
                android:id="@+id/viewDriverTitleEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/driverUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="start"
                app:layout_constraintBottom_toTopOf="@+id/viewDriverline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/viewDriverTitleEdit"
                app:layout_constraintTop_toBottomOf="@+id/viewDriverTitleEdit" />

            <ImageView
                android:id="@+id/viewDriverline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/driverUserName"
                tools:background="@color/black" />

            <TextView
                android:id="@+id/viewDriverCarKindTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="차종"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewDriverline"
                app:layout_goneMarginTop="20dp" />

            <TextView
                android:id="@+id/viewDriverCarKindEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/viewDriverCarKindTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/viewDriverCarKindTextView"
                app:layout_constraintTop_toTopOf="@+id/viewDriverCarKindTextView"
                tools:text="고정값" />

            <TextView
                android:id="@+id/viewDriverCarNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="차명"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewDriverCarKindTextView"
                app:layout_goneMarginTop="20dp" />

            <TextView
                android:id="@+id/viewDriverCarNameEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/viewDriverCarNameTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/viewDriverCarNameTextView"
                app:layout_constraintTop_toTopOf="@+id/viewDriverCarNameTextView"
                tools:ignore="MissingConstraints"
                tools:text="고정값" />

            <TextView
                android:id="@+id/viewDriverTuningTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="튜닝여부"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewDriverCarNameTextView"
                app:layout_goneMarginTop="20dp" />

            <CheckBox
                android:id="@+id/viewDriverTuningCheck"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/viewDriverTuningTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/viewDriverTuningTextView"
                app:layout_constraintTop_toTopOf="@+id/viewDriverTuningTextView" />

            <TextView
                android:id="@+id/viewDriverTuningEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/view_edit_background"
                tools:text="리스폰값"
                android:minLines="3"
                app:layout_constraintEnd_toEndOf="@+id/viewDriverTuningCheck"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/viewDriverTuningTextView"
                app:layout_constraintTop_toBottomOf="@+id/viewDriverTuningTextView"
                app:layout_goneMarginTop="20dp" />

            <TextView
                android:id="@+id/viewDriverviewTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="세부 사항"
                app:layout_constraintEnd_toEndOf="@+id/viewDriverTuningTextView"
                app:layout_constraintStart_toStartOf="@+id/viewDriverTuningTextView"
                app:layout_constraintTop_toBottomOf="@+id/viewDriverTuningEdit" />

            <TextView
                android:id="@+id/viewDriverviewEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/view_edit_background"
                tools:text="리스폰값"
                android:minLines="5"
                app:layout_constraintEnd_toEndOf="@+id/viewDriverTuningEdit"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/viewDriverTuningEdit"
                app:layout_constraintTop_toBottomOf="@+id/viewDriverviewTextView"
                app:layout_goneMarginTop="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>