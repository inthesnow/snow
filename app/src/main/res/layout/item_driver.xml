<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/driverTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="광고할래요"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/driverTimeTextView"/>

    <TextView
        android:id="@+id/driverTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="1"
        android:text="시간"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@+id/driverTitleTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverAreaTextView"
        android:text="지역"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/driverTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/driverCarnameTextView"/>
    <ImageView
        android:id="@+id/driverItemBar"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="?android:attr/listDivider"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@+id/driverAreaTextView"
        app:layout_constraintBottom_toBottomOf="@+id/driverAreaTextView"
        app:layout_constraintStart_toEndOf="@+id/driverAreaTextView"
        app:layout_constraintEnd_toStartOf="@+id/driverCarnameTextView"
        tools:background="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverCarnameTextView"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="차종"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/driverTitleTextView"
        app:layout_constraintStart_toEndOf="@+id/driverItemBar" />

</androidx.constraintlayout.widget.ConstraintLayout>